{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/helpers/*": [
        "src/helpers/*"
      ],
      "@/types/*": [
        "src/types/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/UI/*": [
        "src/components/UI/*"
      ],
      "@/services/*": [
        "src/services/*"
      ],
      "@/store/*": [
        "src/store/*"
      ],
      "@/scss/*": [
        "src/scss/*"
      ],
      "@/constants/*": [
        "src/constants/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
